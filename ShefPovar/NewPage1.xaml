<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ShefPovar.NewPage1"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="Black">
    <StackLayout Margin="40,50,50,0">
        <Label
            Margin="0,0,0,20"
            FontAttributes="Bold"
            FontSize="23"
            Text="Добавить ингредиент"
            TextColor="White" />

        <Entry x:Name="IngredientNameEntry" Placeholder="Название ингредиента" />
        <Entry
            x:Name="IngredientPriceEntry"
            Keyboard="Numeric"
            Placeholder="Цена" />
        <Entry x:Name="IngredientKolvEntry" Placeholder="Количество" />

        <Button
            Margin="50"
            Clicked="AddIngredient_Clicked"
            HorizontalOptions="End"
            Text="Добавить"
            WidthRequest="100" />
    </StackLayout>
</ContentPage>
